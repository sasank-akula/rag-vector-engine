{
  "name": "rag-vector-engine",
  "version": "1.0.0",
  "description": "A chatbot application provides RAG-based responses based on the document context uses hana vector engine",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js/hana": "^1.9.1",
    "@sap-cloud-sdk/http-client": "^3.14.0",
    "@sap/cds": "^8.9.4",
    "@sap/cds-hana": "^2.1.0",
    "@sap/xssec": "^4",
    "cap-llm-plugin": "^1.3.1",
    "express": "^4",
    "langchain": "^0.1.36",
    "marked": "^16.1.2",
    "pdf-parse": "^1.1.1",
    "sanitize-html": "^2.17.0"
  },
  "devDependencies": {
    "@cap-js/sqlite": "1.7.3",
    "@sap/cds-dk": "8.0.2",
    "@ui5/linter": "^1.17.0",
    "mbt": "^1.2.29",
    "rimraf": "^5.0.5"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-rag-ui": "cds watch --open rag-ui/webapp/index.html?sap-ui-xx-viewCache=false",
    "undeploy": "cf undeploy rag-vector-engine --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "cds": {
    "server": {
      "body_parser": {
        "limit": "50mb"
      }
    },
    "requires": {
      "auth": "dummy",
      "db": "hana",
      "GENERATIVE_AI_HUB": {
        "gpt-4": {
          "destinationName": "GenAIHubDestination",
          "deploymentUrl": "/inference/deployments/d07c950f24f4b589",
          "resourceGroup": "default",
          "apiVersion": "2023-05-15",
          "modelName": "gpt-4"
        },
        "text-embedding-ada-002": {
          "destinationName": "GenAIHubDestination",
          "deploymentUrl": "/inference/deployments/d0b11b39cbc4af5e",
          "resourceGroup": "default",
          "apiVersion": "2023-05-15",
          "modelName": "text-embedding-ada-002"
        }
      },
      "GenAIHubDestination": {
        "kind": "rest",
        "credentials": {
          "destination": "GENERATIVE_AI_HUB",
          "requestTimeout": "300000"
        }
      },
      "[production]": {
        "auth": "xsuaa"
      },
      "destinations": true,
      "html5-runtime": true
    }
  }
}
